{
    "manifest_version": 3,
    "name": "Budget Manager",
    "version": "0.1.0",
    "description": "This extension tracks your overall spendings.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "action":{
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",

    "background":{
        "service_worker": "eventPage.js"
    },


    "permissions":[
        "storage",
        "notifications",
        "contextMenus",
        "tts"
    ] 
}